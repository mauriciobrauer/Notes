<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="mb-3">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Escribe el titulo"
            autofocus
          />
        </div>
        <div class="mb-3">
          <textarea
            name="description"
            class="form-control"
            placeholder="description"
          ></textarea>
        </div>
        <div class="mb-3">
          <button
            class="btn btn-primary btn-block"
            type="Submit"
          >Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>