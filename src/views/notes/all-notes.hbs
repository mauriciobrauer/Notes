<div class="row">
  {{#each notes}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4
            class="card-title d-flex justify-content-between align-items-center"
          >
            {{title}}
            <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>
            {{description}}
          </p>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
            <input type="hidden" value="DELETE" name="_method" />
            <div class="d-grid gap-2">
              <button class="btn btn-primary btn-danger" type="submit">
                Delete
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">No hay notas aun</p>
        <a href="/notes/add" class="btn btn-success btn-primary">Crea una nota</a>
      </div>
    </div>
  {{/each}}
</div>